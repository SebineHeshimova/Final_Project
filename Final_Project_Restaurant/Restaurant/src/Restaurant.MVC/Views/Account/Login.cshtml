@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Pustok - Book Store HTML Template</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Use Minified Plugins Version For Fast Page Load -->
	<link rel="stylesheet" type="text/css" media="screen" href="~/newP/css/plugins.css" />
	<link rel="stylesheet" type="text/css" media="screen" href="~/newP/css/main.css" />
	<link rel="shortcut icon" type="~/newP/image/x-icon" href="~/newP/image/favicon.ico">
</head>

	<body >
	<div style="background-color:black" class="page-section inner-page-sec-padding-bottom">
	</div>
	<main class="page-section inner-page-sec-padding-bottom" style="margin-top: 100px;">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
					<!-- Login Form s-->
					<form method="post">
						<div class="login-form" style="border: 3px solid black; ">
							<h1 style="color:black" class="login-title">Login</h1>
							<div class="row">
								<div class="mb-12">
									<label style="color:black">UserName</label>
									<input style="border: 2px solid; color: black;" asp-for="UserName" class="mb-0 form-control" placeholder="Enter your username">
									<span class="text-danger" asp-validation-for="UserName"></span>
								</div>
								<div class="mb-12">
									<label style="color:black">Password</label>
									<input style="border: 2px solid; color: black;" asp-for="Password" class="mb-0 form-control" placeholder="Enter your password">
									<span class="text-danger" asp-validation-for="Password"></span>
								</div>
								<div class="text-danger" asp-validation-summary="ModelOnly"></div>
								<br /><br />
								<div class="col-md-12">
									<button type="submit" class="btn btn-outlined">Login</button>
									<br /><br /><a style="color:blue;" asp-action="register" asp-controller="account">If you don't have account register here</a>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</main>

	<script src="~/newP/js/plugins.js"></script>
	<script src="~/newP/js/ajax-mail.js"></script>
	<script src="~/newP/js/custom.js"></script>
    </body>



