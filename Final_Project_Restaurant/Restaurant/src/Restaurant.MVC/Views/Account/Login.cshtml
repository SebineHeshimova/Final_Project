@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Pustok - Book Store HTML Template</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Use Minified Plugins Version For Fast Page Load -->
	<link rel="stylesheet" type="text/css" media="screen" href="~/newP/css/plugins.css" />
	<link rel="stylesheet" type="text/css" media="screen" href="~/newP/css/main.css" />
	<link rel="shortcut icon" type="~/newP/image/x-icon" href="~/newP/image/favicon.ico">
</head>

	<body >
	<div style="background-color:black" class="page-section inner-page-sec-padding-bottom">
	</div>
	<main class="page-section inner-page-sec-padding-bottom" style="margin-top: 100px;">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
					<!-- Login Form s-->
					<form method="post">
						<div class="login-form">
							<h4 class="login-title">Login</h4>
							<div class="row">
								<div class="col-md-6 col-12 mb--15">
									<label>UserName</label>
									<input asp-for="UserName" class="mb-0 form-control" placeholder="Enter your username">
									<span asp-validation-for="UserName"></span>
								</div>
								<div class="col-md-6 col-12 mb--15">
									<label for="email">Password</label>
									<input asp-for="Password" class="mb-0 form-control" placeholder="Enter your password">
									<span asp-validation-for="Password"></span>
								</div>
								<div class="col-md-12">
									<button type="submit" class="btn btn-outlined">Login</button>
									<br /><br />	<a style="color:blue;" asp-action="register" asp-controller="account">if you don't have account register here</a>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</main>

	<script src="~/newP/js/plugins.js"></script>
	<script src="~/newP/js/ajax-mail.js"></script>
	<script src="~/newP/js/custom.js"></script>
    </body>



