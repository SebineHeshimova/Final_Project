@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="container">
    <br />
    <br />
    <form method="post">
        <h2>
            Tasinan mail: @if (HttpContextAccessor.HttpContext.Items.ContainsKey("Mail"))
            {
                <p>@HttpContextAccessor.HttpContext.Items["Mail"].ToString()</p>
            }
            else
            {
                <p>No data found</p>
            }
        </h2>
        <label>Mail adresinizə gələn 6 rəqəmli kodu daxil edin:</label>
        <input type="text" class="form-control" />
        <br />
        <button class="btn btn-primary"> Hesabı aktivləşdir</button>
    </form>
</div>

