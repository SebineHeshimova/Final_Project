@model AboutViewModel
@{
    ViewData["Title"] = "Index";
}



<main>

    @foreach (var slider in Model.Sliders)
    {
        <div class="hero_single inner_pages background-image" data-background="url(uploads/sliders/@slider.ImageUrl)">
            <div class="opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-9 col-lg-10 col-md-8">
                            <h1>@slider.Title</h1>
                            <p>@slider.Description</p>
                        </div>
                    </div>
                    <!-- /row -->
                </div>
            </div>
            <div class="frame white"></div>
        </div>
    }
    <!-- /hero_single -->

    <div class="pattern_2">
        <div class="container margin_120_100 home_intro">
            <div class="row justify-content-center text-center">
                @foreach (var about in Model.Abouts)
                {
                    <div class="col-lg-7" data-cue="slideInUp" data-delay="500">
                        <div class="main_title center">
                            <span><em></em></span>
                            <h2>@about.Title</h2>
                        </div>
                        <p>@about.Description</p>
                        <p><img src="~/uploads/abouts/@about.SignatureImageUrl" width="140" height="50" alt="" class="mt-3"></p>
                    </div>
                }
            </div>
            <!--/row -->
        </div>
        <!--/container -->
    </div>
    <!--/pattern_2 -->

    <div class="bg_gray">
        <div class="container margin_120_100">
            <div class="row flex-lg-row-reverse">
                <div class="col-lg-5 offset-lg-1 align-self-center mb-4 mb-md-0">
                    @foreach(var preferenceText in Model.PreferenceTexts)
                    {
                        <div class="intro_txt" data-cue="slideInUp" data-delay="500">
                            <div class="main_title">
                                <span><em></em></span>
                                <h2>@preferenceText.Title</h2>
                            </div>
                            <p class="lead">@preferenceText.Description</p>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <p><a asp-action="login" asp-controller="account" class="btn_1 mt-2">@preferenceText.RedirectText</a></p>
                            }
                            else
                            {
                                <p><a href="@preferenceText.RedirectUrl" class="btn_1 mt-2">@preferenceText.RedirectText</a></p>
                            }
                        </div>
                    }
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        @for (int i = 0; i < Model.PreferenceSliders.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <div class="col-lg-6">
                                    <div class="box_how" data-cue="slideInUp">
                                        <figure><img src="~/uploads/preferenceSliders/@Model.PreferenceSliders[i].ImageUrl" data-src="uploads/preferenceSliders/@Model.PreferenceSliders[i].ImageUrl" alt="" width="100" height="110" class="lazy"></figure>
                                        <h3>@Model.PreferenceSliders[i].Title</h3>
                                        <p>>@Model.PreferenceSliders[i].Description</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-6 align-self-center">
                                    <div class="box_how" data-cue="slideInUp">
                                        <figure><img src="~/uploads/preferenceSliders/@Model.PreferenceSliders[i].ImageUrl" data-src="uploads/preferenceSliders/@Model.PreferenceSliders[i].ImageUrl" alt="" width="100" height="110" class="lazy"></figure>
                                        <h3>>@Model.PreferenceSliders[i].Title</h3>
                                        <p>@Model.PreferenceSliders[i].Description</p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--/container -->
    </div>
    <!--/pattern_2 -->

    <div class="container margin_120_100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h3 align="center">What Our Clients Says</h3>
                    <div class="carousel_testimonials owl-carousel owl-theme">
                        @foreach (var feedback in Model.Feedbacks)
                        {
                            <div>
                                <div class="box_overlay">
                                    <div class="pic">
                                        <figure>
                                            <img src="~/uploads/feedbacks/@feedback.ImageUrl" alt="" class="~/assets/img-circle">
                                        </figure>
                                        <h4>@feedback.FullName<small>@feedback.Date</small></h4>
                                    </div>
                                    <div class="comment">
                                        "@feedback.Comment"
                                    </div>
                                </div>
                                <!-- End box_overlay -->
                            </div>
                        }

                    </div>
                    <!-- End carousel_testimonials -->
                </div>
            </div>
        </div>
    </div>
    <!--/call_section-->

    <div class="pattern_2">
        <div class="container margin_120_100">
            <div class="main_title center mb-5">
                <span><em></em></span>
                <h2>Our Chefs and staff</h2>
            </div>
            <div id="staff" class="owl-carousel owl-theme">
                @foreach (var chef in Model.Chefs)
                {
                    <div class="item">
                        <div class="title">
                            <h4>@chef.FullName<em>@chef.Position</em></h4>
                        </div><img src="~/uploads/chefs/@chef.ImageUrl" alt="" width="350" height="500">
                    </div>
                }
            </div>
            <!-- /carousel -->
        </div>
        <!--/container-->
    </div>
    <!--/pattern_2 -->

</main>
<!-- /main -->
