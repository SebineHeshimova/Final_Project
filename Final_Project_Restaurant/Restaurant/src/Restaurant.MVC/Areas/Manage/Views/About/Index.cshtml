@model List<About>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<div class="container-fluid align-items-center d-flex justify-content-between">
    <h2>Index</h2>
    <a class="btn btn-primary" asp-action="create" asp-controller="about">Create</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@about.Title</td>
                    <td><img width="70px" src="~/uploads/abouts/@about.ImageUrl" /></td>
                    <td>
                        <a class="btn btn-warning" asp-action="update" asp-controller="about" asp-route-id="@about.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

