@model List<Category>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<div class="container-fluid align-items-center d-flex justify-content-between">
    <h2>Index</h2>
    <a class="btn btn-primary" asp-action="create" asp-controller="category">Create</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                counter++;
                <tr style="background-color:@(category.IsDeleted==true ? "LightPink" : "")">
                    <th scope="row">@counter</th>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-success" asp-action="update" asp-controller="category" asp-route-id="@category.Id">Update</a>
                        <a class="btn btn-danger" asp-action="delete" asp-controller="category" asp-route-id="@category.Id">Delete</a>
                        <a class="btn btn-@(category.IsDeleted==false ? "warning" : "secondary")" asp-action="softdelete" asp-controller="category" asp-route-id="@category.Id">@(category.IsDeleted == false ? "Hide" : "Revert")</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

