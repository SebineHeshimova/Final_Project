@model List<Setting>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<h1>Index</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Key</th>
                <th scope="col">Value</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var setting in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@setting.Key</td>
                    <td>@setting.Value</td>

                    <td>
                        <a class="btn btn-warning" asp-action="update" asp-controller="setting" asp-route-id="@setting.Id">Update</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
