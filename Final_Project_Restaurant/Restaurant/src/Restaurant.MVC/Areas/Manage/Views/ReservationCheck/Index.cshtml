@using Restaurant.Core.Enums;
@using Restaurant.Core.Enums;
@model List<Reservation>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="container" style=" min-height:50vh">
    <h1>Orders:</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Fulname</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Created Date</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.CreatedDate.ToString("MMMM dd, yyyy H:mm:ss")</td>
                    <td> <span class="badge text-white text-bg-@(item.Status == ReservationStatus.Pending ? "secondary" : item.Status == ReservationStatus.Accepted ? "success" : "danger")" style="padding: 0.4rem 0.8rem; font-size: 16px">@item.Status</span></td>
                    <td><a asp-action="detail" asp-controller="reservationcheck" asp-route-id="@item.Id" class="btn btn-warning">Detail</a></td>


                </tr>
            }
        </tbody>
    </table>
</div>
