@model Reservation
@{
    ViewData["Title"] = "Detail";
    int counter = 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="container">
    <h1 style="color:black">Detail</h1>

    <div class="card" style="width: 100%; ">
        <div class="card-body">
            <h5 class="card-title">Reservation Id: @Model.Id</h5>
            <p class="card-text"><span class="fw-bold text-dark">Fullname:</span>  @Model.FullName</p>
            <p class="card-text"><span class="fw-bold text-dark">Email:</span>  @Model.Email</p>
            <p class="card-text"><span class="fw-bold text-dark">Phone:</span>  @Model.Phone</p>
            <p class="card-text"><span class="fw-bold text-dark">Guest count:</span>  @Model.GuestCount</p>
            <p class="card-text"><span class="fw-bold text-dark">Reservation date:</span>  @Model.DateTime</p>
            <p class="card-text"><span class="fw-bold text-dark">Updatete date:</span>  @Model.UpdatedDate</p>
            <form id="admin-comment-form" asp-action="reject" asp-controller="reservationCheck" method="post">
                <label asp-for="AdminComment"> </label>
                <textarea asp-for="AdminComment"></textarea>
                <span asp-validation-for="AdminComment" class="text-danger"></span>
                <input hidden value="@Model.Id" asp-for="Id" />
            </form>
           
        </div>

        <div class="card-body">
            <a asp-action="pending" asp-controller="ReservationCheck" asp-route-id="@Model.Id" class="btn btn-secondary">Pending</a>
            <a asp-action="accept" asp-controller="ReservationCheck" asp-route-id="@Model.Id" class="btn btn-success">Accept</a>
            <button type="submit" form="admin-comment-form" class="btn btn-danger">Reject</button>
            <a asp-action="index" asp-controller="ReservationCheck" class="btn btn-primary">Go to back</a>
        </div>
    </div>
</div>

