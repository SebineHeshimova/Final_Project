@model Food
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div>
    <div class="card" style="width: 18rem;">
        <form method="post" enctype="multipart/form-data">
            <img src="~/uploads/foods/@Model.ImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h5 class="card-text">@Model.Composition</h5>
                <a asp-action="index" asp-controller="food" class="btn btn-primary">Go to back</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
