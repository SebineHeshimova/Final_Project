@model Slider
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" /></label>
            <input asp-for="Title" placeholder="Title">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" /></label>
            <input asp-for="Description" placeholder="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RedirectText" /></label>
            <input asp-for="RedirectText" placeholder="RedirectText">
            <span asp-validation-for="RedirectText"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RedirectUrl" /></label>
            <input asp-for="RedirectUrl" placeholder="RedirectUrl">
            <span asp-validation-for="RedirectUrl"></span>
        </div>
        <div class="mb-3 form-check">
            <label asp-for="ImageFile" /></label>
            <input asp-for="ImageFile" placeholder="ImageFile">
            <span asp-validation-for="ImageFile"></span>
        </div>
        <div class="form-row">
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsAbout">
                <label class="form-check-label" asp-for="IsAbout">IsAbout</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsHome">
                <label class="form-check-label" asp-for="IsHome">IsHome</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsMenu">
                <label class="form-check-label" asp-for="IsMenu">IsMenu</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsBlog">
                <label class="form-check-label" asp-for="IsBlog">IsBlog</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsGallery">
                <label class="form-check-label" asp-for="IsGallery">IsGallery</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsReservation">
                <label class="form-check-label" asp-for="IsReservation">IsReservation</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsShop">
                <label class="form-check-label" asp-for="IsShop">IsShop</label>
            </div>
            <div class="form-check mb-3 col-md-4">
                <input class="form-check-input" asp-for="IsContact">
                <label class="form-check-label" asp-for="IsContact">IsContact</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
