@model Slider
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" /></label>
            <input asp-for="Title" placeholder="Title">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" /></label>
            <input asp-for="Description" placeholder="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RedirectText" /></label>
            <input asp-for="RedirectText" placeholder="RedirectText">
            <span asp-validation-for="RedirectText"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RedirectAction" /></label>
            <input asp-for="RedirectAction" placeholder="RedirectAction">
            <span asp-validation-for="RedirectAction"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RedirectController" /></label>
            <input asp-for="RedirectController" placeholder="RedirectController">
            <span asp-validation-for="RedirectController"></span>
        </div>
        <div class="mb-3 form-check">
            <label asp-for="ImageFile" /></label>
            <input asp-for="ImageFile" placeholder="ImageFile">
            <span asp-validation-for="ImageFile"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
